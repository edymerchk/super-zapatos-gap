%h1 Listing stores

%table.table.table-striped.table-bordered
  %tr
    %th Name
    %th Address
    %th

  - @stores.each do |store|
    %tr
      %td= store.name
      %td= store.address
      %td
        %center
          = link_to fa_icon("search"), store
          = link_to fa_icon("pencil-square-o"), edit_store_path(store)
          = link_to fa_icon("trash-o"), store, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Store', new_store_path, class: 'btn btn-primary'
